{
  "compilerOptions": {
    "target": "es5",                                    
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                   
    "module": "commonjs",                                    
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                         
    "skipLibCheck": true,
    "outDir": "./build",
    "strictPropertyInitialization": false,
  }
}
